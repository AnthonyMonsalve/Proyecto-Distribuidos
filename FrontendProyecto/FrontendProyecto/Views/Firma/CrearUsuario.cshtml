@{
    ViewData["Title"] = "Proyecto Sistemas Distribuidos";
}

<div class="card mt-2 m-auto" style="max-width: 767px">
    <div class="card-header p-2">
        <h1 class="fs-3 mb-0 text-center">Crear Usuario</h1>
    </div>
    <div>
        <form asp-action="CrearUsuarioProxy" asp-controller="Firma" method="post">
            <div class="container">
                <div class="row p-3">
                    <div class="col-9">
                        <input required placeholder="Introduce el nombre del usuario" type="text" class="form-control form-control-sm" id="nombreUsuario" name="nombreUsuario"/>
                    </div>
                    <div class="col-3">
                        <button type="submit" style="background-color: #244a76" class="border-0 w-100 btn btn-primary btn-sm">Crear</button>
                    </div>
                    @if (Context.Request.Query["message"].Count() > 0)
                    {
                        <div class="col-12">
                            <div class="alert alert-secondary alert-dismissible fade show p-3 mt-3" role="alert">
                                <h4 class="fs-6 fw-bold text-uppercase">Nuevo usuario</h4>
                                <p class="fs-6 m-0"><b>Nombre: </b>@Context.Request.Query["nombre"]</p>
                                <p class="fs-6 m-0"><b>Clave: </b>@Context.Request.Query["clave"]</p>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                <div class="d-flex">
                                    <a class="btn-sm btn-secondary border-0 text-center text-decoration-none mt-2 d-flex align-items-center justify-content-center" style="max-width: 120px" asp-action="Autenticar" asp-controller="firma" asp-route-clave="@Context.Request.Query["clave"]" asp-route-nombre="@Context.Request.Query["nombre"]">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
                                            <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm0 5.996V14H3s-1 0-1-1 1-4 6-4c.564 0 1.077.038 1.544.107a4.524 4.524 0 0 0-.803.918A10.46 10.46 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h5ZM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1v-2Zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1Z" />
                                        </svg>
                                        <span class="m-1 d-block">
                                            Autenticar
                                        </span>
                                    </a>
                                    <a class="btn-sm btn-secondary border-0 text-center text-decoration-none mt-2 ms-2 d-flex align-items-center justify-content-center" style="max-width: 120px" asp-action="Firmar" asp-controller="firma" asp-route-clave="@Context.Request.Query["clave"]" asp-route-nombre="@Context.Request.Query["nombre"]">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                        </svg>
                                        <span class="m-1 d-block">
                                            Firmar
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<a class="btn-sm btn-secondary border-0 text-center text-decoration-none d-block m-auto mt-4 d-flex align-items-center justify-content-center" style="max-width: 120px" asp-action="Index" asp-controller="">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
        <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
    </svg>
    <span class="m-1 d-block">
        Volver
    </span>
</a>