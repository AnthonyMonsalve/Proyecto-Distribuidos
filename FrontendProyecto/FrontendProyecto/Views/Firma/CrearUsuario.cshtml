@{
    ViewData["Title"] = "Proyecto Sistemas Distribuidos";
}

<div class="card mt-2 m-auto" style="max-width: 767px">
    <div class="card-header p-2">
        <h1 class="fs-3 mb-0 text-center">Crear Usuario</h1>
    </div>
    <div>
        <form asp-action="CrearUsuarioProxy" asp-controller="Firma" method="post">
            <div class="container">
                <div class="row p-3">
                    <div class="col-9">
                        <input required placeholder="Introduce el nombre del usuario" type="text" class="form-control form-control-sm" id="nombreUsuario" name="nombreUsuario"/>
                    </div>
                    <div class="col-3">
                        <button type="submit" style="background-color: #244a76" class="border-0 w-100 btn btn-primary btn-sm">Crear</button>
                    </div>
                    @if (Context.Request.Query["message"].Count() > 0)
                    {
                        <div class="col-12">
                            <div class="alert alert-secondary alert-dismissible fade show p-3 mt-3" role="alert">
                                <h4 class="fs-6 fw-bold text-uppercase">Nuevo usuario</h4>
                                <p class="fs-6 m-0"><b>Nombre: </b>@Context.Request.Query["nombre"]</p>
                                <p class="fs-6 m-0"><b>Clave: </b>@Context.Request.Query["clave"]</p>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<a class="btn-sm btn-secondary border-0 text-center text-decoration-none d-block m-auto mt-4 d-flex align-items-center justify-content-center" style="max-width: 100px" asp-action="Index" asp-controller="">
